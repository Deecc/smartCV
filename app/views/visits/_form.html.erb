      <ul>
      <% @visit.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.text_field :name, class: 'form-control', placeholder: 'Nome do visitante' %>
    <div class="form-inline">
      <div class="form-group">
        <%= f.text_field :rg, class: 'form-control ', placeholder: 'Registro Geral' %>
        <%= f.text_field :cpf, class: 'form-control ', placeholder: 'CPF' %>
      </div>
    </div>
    <br />
    <div class="form-inline">
      <div class="form-group">
       <label> Selecione o departamento: </label>
        <%= f.collection_select(:department_id, Department.all,:id, :nome,{}, {class: 'form-control'}) %>
        </div>
      </div>
         <br />
    <div class="form-inline">
      <label> Selecione o servidor: </label>
      <%= f.collection_select(:user_id, User.all, :id, :name, {},{class: 'form-control', placeholder: 'FuncionÃ¡rio'}) %>
    </div>
    <br />
    <div class="form-inline">
      <%= f.label "Entrada", class: 'control-label' %>
      <br />
      <%= f.datetime_select(:entrada, {:order => [:day,:month, :year]},{class: 'form-control glyphicon glyphicon-calendar aria-hidden="true"'}) %>
    </div>
    <div class="form-inline">
      <%= f.label "Saida    ", class: 'control-label' %>
      <br />
      <%= f.datetime_select(:saida,{:order => [:day,:month, :year]}, class: 'form-control glyphicon glyphicon-calendar aria-hidden="true"', placeholder: 'Empresa') %>
    </div>
    <br />
    <div class="form-inline">
      <label>Selecione a empresa</label>
